
from faker import Faker
import psycopg2     
import random
from datetime import timedelta

fake = Faker()


conn = psycopg2.connect(
    dbname="FLOWRISTIQUE",   # Ganti dengan nama database kamu
    user="postgres",
    password="Khalil06",
    host="localhost",
    port="5432"
)
cur = conn.cursor()



jumlah_data = 10000  # ubah jumlah sesuai kebutuhan

for i in range(1, jumlah_data + 1):
    quantity_order = random.randint(1,5)
    order_id = f"O{str(random.randint(1, 10000)).zfill(5)}"
    product_id = f"P{str(random.randint(1, 10)).zfill(4)}"
    

    cur.execute(
    """
    INSERT INTO detail_order (
        quantity_order, order_id, product_id 
    )
    VALUES (%s, %s, %s)
    """,
    (
        quantity_order, order_id, product_id
    ))



print(f"[OK] {jumlah_data} data orders berhasil dibuat.")
conn.commit()
cur.close()
conn.close()
print("[DONE] Semua proses selesai.")
